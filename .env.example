# discord-claude-bridge v2 (KMP edition)
# Copy to .env and fill in your values

# ── Discord ──────────────────────────────────────────────────────────────────
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_ALLOWED_USER_ID=your-discord-user-id

# ── Workspaces ───────────────────────────────────────────────────────────────
WORKSPACES_PATH=./workspaces.json
DEFAULT_WORKSPACE=

# ── Projects ─────────────────────────────────────────────────────────────────
BASE_PROJECTS_DIR=~/Projects
TEMPLATES_DIR=./templates
# Put your KMP template at: templates/kmp/KmpTemplate/
# Generate one from: https://kmp.jetbrains.com

# ── Claude ───────────────────────────────────────────────────────────────────
CLAUDE_BIN=claude
CLAUDE_TIMEOUT=3600
AGENT_MODE=1
MAX_BUILD_ATTEMPTS=4

# ── Android ──────────────────────────────────────────────────────────────────
ADB_BIN=adb
EMULATOR_BIN=emulator
ANDROID_AVD=Pixel_9_Pro_XL

# ── iOS ──────────────────────────────────────────────────────────────────────
XCODEBUILD=xcodebuild
XCRUN=xcrun
IOS_SIMULATOR_NAME=iPhone 16
IOS_SIMULATOR_RUNTIME=iOS-18-0

# ── Web ──────────────────────────────────────────────────────────────────────
WEB_SERVE_PORT=9000

# ── KMP ──────────────────────────────────────────────────────────────────────
KMP_PACKAGE_PREFIX=com.yourname
TEMPLATE_OLD_PKG=com.yourname.kmptemplate

# ── Queue & Budget ───────────────────────────────────────────────────────
DAILY_TOKEN_CAP_USD=50
QUEUE_STOP_PCT=90

# ── Mirror & Networking ─────────────────────────────────────────────────────
SCRCPY_DIR=/path/to/ws-scrcpy
SCRCPY_PORT=8000
TAILSCALE_HOSTNAME=your-tailscale-ip-or-hostname
SCREEN_RECORD_SECONDS=15
