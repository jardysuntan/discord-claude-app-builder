# discord-claude-bridge v2 (KMP edition)
# Copy to .env and fill in your values

# ── Discord ──────────────────────────────────────────────────────────────────
DISCORD_BOT_TOKEN=your-bot-token-here
DISCORD_ALLOWED_USER_ID=your-discord-user-id
DISCORD_ANNOUNCE_CHANNEL_ID=your-channel-id

# ── Workspaces ───────────────────────────────────────────────────────────────
WORKSPACES_PATH=./workspaces.json
DEFAULT_WORKSPACE=

# ── Projects ─────────────────────────────────────────────────────────────────
BASE_PROJECTS_DIR=~/Projects
TEMPLATES_DIR=./templates
# Put your KMP template at: templates/kmp/KmpTemplate/
# Generate one from: https://kmp.jetbrains.com

# ── Claude ───────────────────────────────────────────────────────────────────
CLAUDE_BIN=claude
CLAUDE_TIMEOUT=3600
AGENT_MODE=1
MAX_BUILD_ATTEMPTS=8

# ── Android ──────────────────────────────────────────────────────────────────
ADB_BIN=adb
EMULATOR_BIN=emulator
ANDROID_AVD=Pixel_9_Pro_XL

# ── iOS ──────────────────────────────────────────────────────────────────────
XCODEBUILD=xcodebuild
XCRUN=xcrun
IOS_SIMULATOR_NAME=iPhone 17 Pro Max
IOS_SIMULATOR_RUNTIME=iOS-26-2

# ── App Store Connect (TestFlight) ───────────────────────────────────────────
# Get API key from: https://appstoreconnect.apple.com/access/integrations/api
APPLE_TEAM_ID=
ASC_KEY_ID=
ASC_ISSUER_ID=
ASC_KEY_PATH=~/.private_keys/AuthKey_XXXXXXXXXX.p8

# ── Web ──────────────────────────────────────────────────────────────────────
WEB_SERVE_PORT=9000

# ── KMP ──────────────────────────────────────────────────────────────────────
KMP_PACKAGE_PREFIX=com.yourname
TEMPLATE_OLD_PKG=com.yourname.kmptemplate

# ── Queue & Budget ───────────────────────────────────────────────────────
DAILY_TOKEN_CAP_USD=50
QUEUE_STOP_PCT=90

# ── Mirror & Networking ─────────────────────────────────────────────────────
SCRCPY_DIR=/path/to/ws-scrcpy
SCRCPY_PORT=8000
TAILSCALE_HOSTNAME=your-tailscale-ip-or-hostname
SCREEN_RECORD_SECONDS=15
